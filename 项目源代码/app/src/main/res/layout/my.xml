<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    >

    <LinearLayout
        android:background="@color/white"
        android:id="@+id/myAccount"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="1dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_my_photo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/ic_action_account"
                android:backgroundTint="@color/colorPrimary"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_width="1dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/accountName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="菠萝"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/email"
                android:layout_marginLeft="15dp"
                android:text="804521045@qq.com"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_action_right"
                android:backgroundTint="@color/light_gray"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/button"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/myAccount"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:background="@color/white"
            android:paddingLeft="30dp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_action_cloud"
                android:backgroundTint="@color/light_blue"/>
            <TextView
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="同步数据"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/record_reminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingBottom="13dp"
            android:paddingLeft="30dp"
            android:paddingTop="13dp"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_action_alert"
                android:backgroundTint="@color/light_red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="记录提醒"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="3dp"
            android:background="@color/white"
            android:paddingLeft="30dp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_action_file"
                android:backgroundTint="@color/dark_orange"/>
            <TextView
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="导入/导出"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="3dp"
            android:background="@color/white"
            android:paddingLeft="30dp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_action_help"
                android:backgroundTint="@color/light_gray"/>
            <TextView
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="帮助与建议"
                android:textSize="18sp"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
