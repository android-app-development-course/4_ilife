<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="numberButton">

        <item name="android:textSize">20sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@color/buttonGreen</item>
    </style>
    <style name="typeButtom">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:padding">4dp</item>
    </style>
    <style name="moneyButton">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:background">@drawable/money_button_selector</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="noBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#f3f2f7</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="timeChooseButton">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:background">@drawable/time_choose_selector</item>
    </style>
</resources>
